{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": {
            "options": [80]
        },
        "no-console": { "severity": "off" },
        "radix": false,
        "interface-name": [true, "always-prefix"],
        "no-unnecessary-initializer": true,
        "prefer-method-signature": true,
        "prefer-switch": true,
        "prefer-template": true,
        "space-before-function-paren": [true, {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],
        "unnecessary-else": [true, {"allow-else-if": true}],
        "variable-name": {
            "options": [
                "check-format",
                "ban-keywords",
                "allow-pascal-case",
                "allow-leading-underscore"
            ]
        },
        "indent": [true, "tabs", 2],
        "no-consecutive-blank-lines": true,
        "quotemark": [true, "single", "avoid-escape"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ]
    },
    "rulesDirectory": []
}
